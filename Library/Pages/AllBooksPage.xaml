<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Library.Pages.AllBooksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Library.UserControls"
    xmlns:entity="using:Library.Entities"
    xmlns:local="using:Library.Pages">

    <Grid Style="{StaticResource PageGridStyle}">

        <ItemsView x:Name="BooksItemsView" ItemsSource="{x:Bind Books, Mode=OneWay}">
            <ItemsView.ItemTemplate>
                <DataTemplate x:DataType="entity:Book">
                    <ItemContainer>
                        <controls:BookCard Book="{x:Bind Mode=OneWay}" />
                    </ItemContainer>
                </DataTemplate>
            </ItemsView.ItemTemplate>

            <ItemsView.Layout>
                <UniformGridLayout
                    MaximumRowsOrColumns="3"
                    MinColumnSpacing="12"
                    MinItemWidth="200"
                    MinRowSpacing="12"
                    Orientation="Horizontal" />
            </ItemsView.Layout>
        </ItemsView>


    </Grid>
</Page>
