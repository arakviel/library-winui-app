<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Library.Pages.AddBookPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Library.Pages">

    <Grid Padding="32,32,32,24" RowDefinitions="*, Auto">
        <StackPanel Grid.Row="0" Spacing="16">
            <StackPanel>
                <TextBox
                    x:Name="TitleTextBox"
                    Header="Назва книги"
                    PlaceholderText="Введіть назву" />
                <TextBlock x:Name="TitleError" Style="{StaticResource ErrorTextBlock}" />
            </StackPanel>

            <StackPanel>
                <TextBox
                    x:Name="AuthorTextBox"
                    Header="Автора"
                    PlaceholderText="Введіть автора" />
                <TextBlock x:Name="AuthorError" Style="{StaticResource ErrorTextBlock}" />
            </StackPanel>

            <StackPanel>
                <ComboBox
                    x:Name="CategoryComboBox"
                    Header="Категорія"
                    PlaceholderText="Виберіть категорію">
                    <x:String>Романи</x:String>
                    <x:String>Триллери</x:String>
                    <x:String>Фантастика</x:String>
                    <x:String>Фентезі</x:String>
                </ComboBox>
                <TextBlock x:Name="CategoryError" Style="{StaticResource ErrorTextBlock}" />
            </StackPanel>

            <TextBox
                x:Name="DescriptionTextBox"
                Height="150"
                AcceptsReturn="True"
                Header="Опис"
                PlaceholderText="Введіть опис книги"
                TextWrapping="Wrap" />

            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button
                    x:Name="PickImageButton"
                    Click="PickImageButton_Click"
                    Content="Вибрати картинку" />
                <TextBlock
                    x:Name="ImagePathText"
                    VerticalAlignment="Center"
                    Text="Картинка не обрана" />
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="8">
                <Button Click="Cancel_Click" Content="Скасувати" />
                <Button
                    Click="Save_Click"
                    Content="Зберегти"
                    Style="{StaticResource AccentButtonStyle}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
